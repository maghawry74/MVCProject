@{
    Layout = "Register_Layout";
}
@model Kotabko.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="head p-4 ">
    <h1 class="fs-1">My Account</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">
            <form asp-action="Register">
                
                <div class="form-group m-4">
                    <label asp-for="userName" class="control-label m-1"></label>
                    <input asp-for="userName" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="userName" class="text-danger"></span>
                </div>


                <div class="form-group m-4">
                    <label asp-for="password" class="control-label m-1" ></label>
                    <input asp-for="password" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <div class="form-group m-4">
                    <label asp-for="Confirmpassword" class="control-label m-1" ></label>
                    <input asp-for="Confirmpassword" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                </div>



                <div class="form-group m-4">
                    <label asp-for="city" class="control-label m-1"></label>
                    <input asp-for="city" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>


                <div class="form-group m-4">
                    <label asp-for="governorate" class="control-label m-1"></label>
                    <input asp-for="governorate" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="governorate" class="text-danger"></span>
                </div>


                <div class="form-group m-4">
                    <label asp-for="Image" class="control-label m-1"></label>
                    <input asp-for="Image" type="file" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group m-4">

                    <input type="submit" class="control-label m-1"  value="Create" style="border-radius:50px" />

                </div>


            </form>

        </div>
        <div class="col-lg-3">
        </div>
    </div>

</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
