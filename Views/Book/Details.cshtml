@model Book
<div class=" row">
    <div class="col-12 text-dark mt-5 ">
        <h2> Details</h2>
    </div>
    <form style="border-style: ridge;">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label asp-for="Title" class="form-label"></label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input asp-for="Title" class="form-control " readonly="readonly">
                    </div>
                </div>

                <!--  //////////////////////////////////////////-->
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label asp-for="AuthorId" class="form-label">Author</label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input class="form-control " readonly="readonly " value="@Model.Author.Name">
                    </div>
                </div>
                <!--  //////////////////////////////////////////-->
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input class="form-control " readonly="readonly " value="@Model.Category.Name">
                    </div>
                </div>
                <!--  //////////////////////////////////////////-->
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label asp-for="Price" class="form-label"></label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input asp-for="Price" class="form-control " readonly="readonly">
                    </div>
                </div>
                <!--  //////////////////////////////////////////-->
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label asp-for="Rate" class="form-label"></label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input asp-for="Rate" class="form-control " readonly="readonly">
                    </div>
                </div>
                <!--  //////////////////////////////////////////-->
                <div class="form-group row">
                    <div class="col-2 mt-4">
                        <label class="form-label">IsAvailable</label>
                    </div>
                    <div class="col-5 mt-4 ms-5">
                        <input asp-for="IsAvaiable" readonly="readonly">
                    </div>
                </div>
                <!--////////////////////////////////-->
                <div class="col-2 mt-4">
                    <label asp-for="Description" class="form-label"></label>
                </div>
                <div class="col-5 mt-4 ms-5">
                    <textarea asp-for="Description" readonly="readonly" rows="10" cols="41"></textarea>
                </div>
                <br />
                <div class="mt-4 mb-4">
                    <a asp-action="Edit" asp-controller="Book" asp-route-id="@Model.Id" class="btn btn-secondary rounded-pill">Edit</a>
                    <a asp-action="Index" asp-controller="Book" class="btn btn-success rounded-pill"> Back To List</a>
                </div>
            </div>

            <div class="col-3 mt-5">
                <img src="~/Imgs/@Model.Image" width="100%" style="border-radius:5px;border:1px solid #efefef">
            </div>
        </div>
    </form>
</div>
