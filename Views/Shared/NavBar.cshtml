@{
    Layout = null;
}
<nav class="navbar fs-4 navbar-expand-lg navbar-light container p-3">
    <div class="container-fluid">
        <a class="navbar-brand fs-5" asp-action="index" asp-controller="Home"><img src="~/imgs/logo.svg" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class=" collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ms-auto ">
                <li class="nav-item">
                    <a class="nav-link mx-2 active" aria-current="page" asp-action="index" asp-controller="Home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" asp-action="ShopIndex" asp-controller="Shop">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mx-2" asp-controller="About" asp-action="About">About Us</a>
                </li>
                @{
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Author" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-action="Index" asp-controller="Category">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-action="Index" asp-controller="Book">Books</a>
                        </li>
                    }
                }
                
                
            </ul>

            <ul class="navbar-nav position-relative">
                @await Component.InvokeAsync("shoppingCardSummary")
            </ul>

            @* shoppingcard Icon*@
            <ul class="navbar-nav ms-auto d-none d-lg-inline-flex align-items-center">


                @{
                    if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark h5" asp-action="Logout" asp-controller="Account">Log Out</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark h5" asp-action="Register" asp-controller="Account">Register</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark h5" asp-action="Login" asp-controller="Account" target="blank">Log In</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</nav>