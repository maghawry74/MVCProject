@model List<MainBookVM>

<style>
    .line{
        height:.1rem;
        background-color:black;
        width:60%;
    }
    .mybtn:hover{
        background-color:indigo;
        
    }

    .side{
        border-radius:1rem
    }
</style>

<div class="container my-5">
    <div class="row my-5">
        <div class="d-flex gap-1 justify-content-between align-items-center col-8">
            <h1>Best Sellers</h1>
            <div class="line"></div>
            <a class="mybtn btn btn-indigo-500 text-light" asp-action="ShopIndex" asp-controller="Shop">View All</a>
        </div>
        <h1 class="col-4">Best Sellers</h1>
    </div>
    <div class="row justify-content-start align-items-start">
        <div class="col-8">
                <div class="row justify-content-between align-items-center">
                @for(int item=0; item<8;item++)
                {
                    <div class="d-flex justify-content-start gap-5 align-items-start mb-5 col-6">
                        <partial name="MainBookView" model="@Model[item]"/>
                        </div>
                    }
                </div>
        </div>
        <div class="col-4 d-flex flex-column justify-content-start bg-green-200 gap-3 align-items-start p-3 py-5 side">
            @for(int i=0;i<4;i++)
            {
                <div class="d-flex justify-content-start gap-3 align-items-start">
                <partial name="MainBookView" model="Model[i]"/>
                </div>
            }
        </div>
    </div>
</div>
