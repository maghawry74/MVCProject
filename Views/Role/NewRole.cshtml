@model Kotabko.ViewModel.RoleViewModel
<form asp-action="NewRole" asp-controller="Role" method="post">
    <div class="form-group m-4">
                    <label asp-for="RoleName" class="control-label m-1"></label>
                    <input asp-for="RoleName" class="form-control" style="border-radius:50px" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
    <div class="form-group m-4">

        <input type="submit" class="control-label m-1"  style="border-radius:50px" />

    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}