@model Category
<div class=" row">
    <div class="col-12 text-dark mt-5 ">
        <h2>Edit Category</h2>
    </div>
    <form asp-action="Edit" method="post" style="border-style: ridge;">
        <div class="form-group row">
            <div class="col-2 mt-4">
            <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-5 mt-4">
                <input asp-for="Name" class="form-control ">
            </div>
          <span asp-validation-for="Name" class="text-danger"></span>
          <div class="mt-4 mb-4">
                <button type="submit" class="btn btn-secondary rounded-pill">Update</button>
                <a asp-action="Index" class="btn btn-success rounded-pill"> Back To List</a>
          </div>
        </div>
    </form>
</div
@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
}