@model Author
<div class=" row">
    <div class="col-12 text-Dark mt-5 ">
        <h2>Add New Author</h2>
    </div>
    <form asp-action="New" method="post" style="border-style: ridge;">
        <div class="form-group row">
            <div class="col-2 mt-4">
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-5 mt-4">
                <input asp-for="Name" class="form-control ">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
            <!--  //////////////////////////////////////////-->
            <div class="col-2 mt-4">
                <label asp-for="Description" class="form-label"></label>
            </div>
            <div class="col-5 mt-4">
                <textarea asp-for="Description" readonly="readonly" rows="10" cols="41"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
            <!--  //////////////////////////////////////////-->
            <div class="col-2 mt-4">
                <label asp-for="Image" class="form-label"></label>
            </div>
            <div class="col-5 mt-4">
                <input asp-for="Image" class="form-control " type="file">
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
            <!--  //////////////////////////////////////////-->
            <div class="mt-4 mb-4">
                <button type="submit" class="btn btn-secondary  rounded-pill">Add</button>
                <a asp-action="Index" asp-controller="Author" class="btn btn-success rounded-pill"> Back To List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial"></partial>
}
